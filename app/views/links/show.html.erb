<html>
  <head>
    <link rel="stylesheet" href="custom.css.scss">
  </head>
  <body>

  <a href="/links" class="btn-link">Back</a>
  <div class="link-whole">

    <div class="image-title-con">
      <span class="show-title lighter"><%= @link.title %></span>
    </div>

    <div class="show-body">

      <div class="show-image">
        <%= image_tag @link.image.url, class: "image-show" %>
      </div>

      <br>

      <div class="show-text">
        <span class="show-description"><%= @link.description %></span>
      </div>

      <br>
      <br>

    <br>

    <p class="text-center show-links">
    <span class="url"><%= link_to "View Product", @link.url, class: "btn-link", target: "_blank" %></span>
    <% if current_user.try(:email) == "sbhenrichs@gmail.com" %>
      <span class="blue"> | </span><%= link_to "Update Link", edit_link_path(@link), class: "btn-link" %><span class="blue"> | </span><%= link_to "Delete Link", link_path(@link), method: :delete, data: {confirm: "You sure bud?" }, class: "btn-link" %>
    </p>
    <% else %>

    <% end %>

    <%= form_for :campaign, url: campaigns_path do |f| %>
      <%= f.hidden_field :name, value: current_user.email %>
      <%= f.hidden_field :product, value: @link.product %>
      <%= f.hidden_field :title, value: @link.title %>
      <%= f.hidden_field :website, value: current_user.website %>
      <%= f.hidden_field :productlink, value: @link.url %>
      <%= f.hidden_field :description, value: @link.description %>
      <%= f.hidden_field :date, value: Date.today.to_s %>
      <br>
      <br>
    <div class="button-center-con">
      <%= f.submit :"Start Campaign", class: "btn btn-primary btn-lg button-center" %>
    </div>

    <% end %>

  </div>


  </body>
</html>
