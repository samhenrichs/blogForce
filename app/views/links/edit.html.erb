<html>
  <head>

  </head>
  <body>
    <h1>Update Link</h1>
    <%= form_for @link do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :url %>
      <%= f.url_field :url, class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
      <%= f.submit :"Update Link", class: "btn btn-primary" %>
      </div>

    <% end %>
  </body>
</html>
